              <%= link_to '登録はこちらから', new_user_path, class: 'text-blue text-sm hover:underline' %>
            </div>
          <div class=""><img src="images/shift.jpg" alt="" width="1100px"></div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="border-b border-blue border-opacity-20">
    <div class="hero bg-base-100">
      <div class="max-w-4xl px-4 my-12">
        <div class="tr-hero-content flex flex-col mb-24 lg:flex-row lg:justify-bitween mt-24">
          <div class="mr-24"><img src="images/shift.jpg" alt="" width="1100px"></div>
          <div class="pt-4">
            <div class="flex items-center mb-2">
              <img class="mr-2" src="images/calendar-icon.png" alt="" width="36px">
