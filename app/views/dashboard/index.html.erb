<div class="flex flex-1">
  <!-- Sidebar -->
  <nav class="bg-white shadow-lg w-60 p-4 flex flex-col justify-between">
    <ul>
      <li class="mb-2">
        <a href="#" class="flex items-center text-sidebar hover:bg-gray-100 p-2 rounded">
          <img src="/images/check-calendar.svg" alt="" class="mr-2 w-6 h-6">
          シフト管理
        </a>
      </li>
      <li class="mb-2">
        <a href="#" class="flex items-center text-sidebar hover:bg-gray-100 p-2 rounded">
          <img src="/images/person.svg" alt="" class="mr-2 w-6 h-6">
          スタッフ管理
        </a>
      </li>
    </ul>
    <ul>
      <div class="border-t pb-4 border-gray border-opacity-30"></div>
      <li class="mb-2">
        <a href="#" class="flex items-center text-sidebar hover:bg-gray-100 p-2 rounded">
          <img src="/images/help.svg" alt="" class="mr-2 w-6 h-6">
          お問い合わせ
        </a>
      </li>
      <li class="mb-2">
        <a href="#" class="flex items-center text-sidebar hover:bg-gray-100 p-2 rounded">
          <img src="/images/service.svg" alt="" class="mr-2 w-6 h-6">
          利用規約
        </a>
      </li>
      <li class="mb-2">
        <a href="#" class="flex items-center text-sidebar hover:bg-gray-100 p-2 rounded">
          <img src="/images/privacy.svg" alt="" class="mr-2 w-6 h-6">
          プライバシーポリシー
        </a>
      </li>
    </ul>
  </nav>
  <!-- Main Content -->
  <main class="flex-1">
    <div class="staff-container">
      <div class="staff-title justify-between flex p-4">
        <div class="text-2xl text-black">スタッフ表</div>
        <%= link_to '#', class: "btn btn-sm border-gray border-opacity-50 bg-white text-gray rounded hover:bg-blue hover:text-white hover:border-blue px-7 ml-auto mr-2" do %>
          スタッフ追加
        <% end %>
      </div>
    </div>
  </main>
</div>
